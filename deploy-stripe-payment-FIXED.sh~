  promoCode?: string;
  readyToSign: boolean;
  localMarketHigh: boolean;
}

export interface PricingCalculation {
  subtotal: number;
  discounts: DiscountBreakdown;
  total: number;
  deposit: number;
}

export interface DiscountBreakdown {
